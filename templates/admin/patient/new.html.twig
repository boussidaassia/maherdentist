{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_patient_new' %}

{% block main %}
   <div class="border">
    <h1>{{ 'title.patient_new'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.telephone ) }}
        {{ form_row(form.code ) }}
        {{ form_row(form.montantTotal ) }}
        {{ form_row(form.date) }}
{#        {{ form_row(form.docteur) }}#}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_patient'|trans }}
        </button>
        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('admin_patient_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
        </a>
    {{ form_end(form) }}
    </div>
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
